{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": [
      "esnext.asynciterable",
      "ES2019",
      "dom"
    ],
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true
  }
}
