{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "es2017",
      "DOM"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/generated/*": ["src/@generated/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
